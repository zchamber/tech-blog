<link rel="stylesheet" href="/css/comment.css">
<form class="edit-post-form d-flex justify-content-center">
    <div class="card text-center w-75 p-3 bg-dark text-white" id="postID" data-post_id="{{id}}">
        <div class="card-header p-3 border border-primary border-start-2 rounded">
            <strong>Title: {{post_title}} <br/></strong>
        </div>
        <div class="card-body">
            <h5 class="form-control border-primary text-dark-emphasis" id="post_contents">{{post_contents}}</h5>
        </div>
        <div class="card-header p-3 border border-primary border-start-2 rounded">
            <strong>Author: {{user.username}} <br/></strong>
        </div>
        <div class="card-footer text-muted">
            2 days ago
        </div>
    </div>
</form>

{{#if loggedIn}}
    <form action="" class="commentForm">
        <div class="d-flex justify-content-center pt-3 pb-2">
            <input type="text" name="text" id="commentText" placeholder="+ Add a comment" class="form-control addtxt">
            <button id="newPostBtn" class="btn btn-primary" type="submit"> + Post Comment </button>
        </div>
    </form>
{{else}}
    <form action="" class="commentForm">
        <div class="d-flex justify-content-center pt-3 pb-2">
            <input type="text" name="text" id="commentText" placeholder="+ Add a comment" class="form-control addtxt">
            <a class="nav-link" href="/login">
                <button id="newPostBtn" class="btn btn-danger" type="button"> + Post Comment </button>
            </a>
        </div>
    </form>
{{/if}}

{{#each comments as |comment|}}
    <div class="container justify-content-center mt-5 border-left border-right">
        <div class="d-flex justify-content-center py-2">
            <div class="second py-2 px-2"> <span class="text1">{{comment.text}}</span>
                <div class="d-flex justify-content-between py-1 pt-2">
                    <div><img src="https://i.imgur.com/AgAC1Is.jpg" width="18"><span class="text2">{{user.username}}</span></div>
                    <div>
                        <span class="text3">{{formatDateAndTime comment.comment_date}}</span>
                        <span class="thumbup"><i class="fa fa-thumbs-o-up"></i></span>
                        <span class="text4">3</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/each}}
{{#if loggedIn}}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
<script src="/js/comment.js"></script>
{{/if}}

